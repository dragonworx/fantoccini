{
  "compilerOptions": {
    "sourceRoot": "./src",
    "strict": true,
    "outDir": "./ts-build/",
    "lib": ["es2015", "DOM"],
    "types": ["jest"],
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  }
}